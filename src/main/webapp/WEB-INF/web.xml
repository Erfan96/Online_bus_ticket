<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>filter</filter-name>
        <filter-class>servlet.LoginFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>filter</filter-name>
        <url-pattern>/login</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>travel</servlet-name>
        <servlet-class>servlet.TravelServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>travel</servlet-name>
        <url-pattern>/travel</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>buy</servlet-name>
        <servlet-class>servlet.BuyServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>buy</servlet-name>
        <url-pattern>/buy</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>success</servlet-name>
        <servlet-class>servlet.SuccessfulServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>success</servlet-name>
        <url-pattern>/success</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ticket</servlet-name>
        <servlet-class>servlet.ListTicketServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ticket</servlet-name>
        <url-pattern>/ticket</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>showOneTicket</servlet-name>
        <servlet-class>servlet.ShowTicketServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>showOneTicket</servlet-name>
        <url-pattern>/showTicket</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>cancelTicket</servlet-name>
        <servlet-class>servlet.CancelTicketServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>cancelTicket</servlet-name>
        <url-pattern>/cancel</url-pattern>
    </servlet-mapping>
</web-app>